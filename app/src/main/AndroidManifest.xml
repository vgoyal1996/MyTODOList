<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.vipul.mytodolist" >

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.Mytheme1" >
        <activity
            android:name=".MainActivity"
            android:label="@string/title_main_tasks_activity">
        </activity>
        <activity
            android:name=".NewTaskActivity"
            android:label="@string/title_activity_new_task"
            android:parentActivityName=".MainActivity" >
        </activity>
        <activity
            android:name=".TaskDetailActivity"
            android:label="@string/title_detailed_view"
            android:parentActivityName=".MainActivity" >
        </activity>
        <activity
            android:name=".TaskEditActivity"
            android:label="@string/title_edit_task"
            android:parentActivityName=".MainActivity" >
        </activity>
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_settings"
            android:parentActivityName=".MainActivity" >
        </activity>

        <service
            android:name=".TaskNotificationService"
            android:exported="false" >
        </service>

        <activity
            android:name=".GridViewActivity"
            android:label="@string/title_main_tasks_activity" >
        </activity>
        <activity
            android:name=".EmptyActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SearchResultListviewActivity"
            android:label="@string/title_search_results">
        </activity>
        <activity
            android:name=".SearchResultGridViewActivity"
            android:label="@string/title_search_results" >
        </activity>

        <service
            android:name=".SnoozeService"
            android:exported="false" >
        </service>
        <service
            android:name=".TimerService"
            android:exported="false" >
        </service>
        <service
            android:name=".CompleteAndRestartTaskService"
            android:exported="false" >
        </service>
    </application>

</manifest>
