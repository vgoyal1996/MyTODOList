<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout  android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="com.example.vipul.mytodolist.com.dudeonfireandCO.vipul.mytodolist.TaskDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal"
        android:id="@+id/text_layout"
        android:background="#80FF00">
        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="text"
            android:layout_marginStart="9dp"
            android:layout_gravity="center"
            android:textAllCaps="true"
            android:textSize="30sp"
            android:textColor="#000000"
            android:id="@+id/task_name"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="5dp"
            android:id="@+id/image"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Started on:"
            android:layout_marginStart="50dp"
            android:textSize="30sp"
            android:id="@+id/starts_on"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="30/11/15"
            android:layout_marginStart="50dp"
            android:layout_marginTop="5dp"
            android:textSize="20sp"
            android:id="@+id/start_date"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ends in:"
            android:gravity="center"
            android:layout_marginStart="50dp"
            android:textSize="30sp"
            android:id="@+id/ends_on"
            android:textColor="#A4A4A4"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3d 12hrs 13min 12sec"
            android:layout_marginStart="50dp"
            android:layout_marginTop="5dp"
            android:textSize="20sp"
            android:id="@+id/end_date"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:textSize="30sp"
            android:id="@+id/description_heading"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sample description"
            android:layout_marginStart="50dp"
            android:layout_marginTop="5dp"
            android:textSize="20sp"
            android:id="@+id/description"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add to Calendar"
            android:id="@+id/calendar_add"
            android:textSize="15sp"
            android:layout_marginStart="10dp"
            android:background="#A4A4A4"
            android:textColor="#000000"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete from Calendar"
            android:id="@+id/calendar_delete"
            android:textSize="15sp"
            android:background="#A4A4A4"
            android:textColor="#000000"
            android:layout_weight="1"
            android:layout_marginEnd="10dp"/>
    </LinearLayout>

</LinearLayout>
</ScrollView>